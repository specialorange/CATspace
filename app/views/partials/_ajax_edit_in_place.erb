<div id="<%=field_name%>_field"  onMouseOver="flashObj(this);" onMouseOut="unFlashObj(this);" onClick="doAjaxInPlaceEdit('<%=field_name%>');">
	<%if field_value != "" %>
		<%= field_value %>
	<%else%>
		None
	<%end%>
</div>
<div id="<%=field_name%>_editing_section" style="display:none;">
	<textarea rows="20" cols="52" id="<%=field_name%>_editor"><%=field_value%></textarea><br>
	<div class="buttons">
		<button value="Save" onClick="doAjaxInPlaceSave('<%=field_name%>');" class="positive">Save</button>
		<button value="Cancel" onClick="doAjaxInPlaceCancel('<%=field_name%>');" class="negative">Cancel</button>
	</div>
</div>
<div id="<%=field_name%>_saving_section" style="display:none;">
	Saving...
</div>