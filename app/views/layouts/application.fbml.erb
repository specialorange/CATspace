<%= stylesheet_link_tag("site")%>
<%= javascript_include_tag('application','facebooker')  %>
<div id="wrapper">
<div id="header">
	<div id="headerSearchForm">
		<%=form_tag search_url%>
		<%=text_field_tag("q")%>
		<%= submit_tag "Search"%>
		<!-- <span class="buttons"><button type="submit" name="Search">Search</button></span> -->
		</form>
	</div>
<div id="headerImage"><%= image_tag("logo.png")%></div>
</div>
<div id="content">
<% fb_tabs do %>
	<%= fb_tab_item("Home", home_url, :selected => controller_selected?('home'))%>
	<%= fb_tab_item("Assignments", assignments_url, :selected => controller_selected?('assignments'))%>
	<%= fb_tab_item("People", "#")%>
	<%= fb_tab_item("My CatSpace", profile_url(:id => ""), :selected => self_profile_selected?)%>
<% end %>
<% if flash[:alert]%>
<p class="alert"><%= flash[:alert] %></p>
<% end %>
<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>
<div id="current_content">

<%= yield %>
</div>
<div id="footer"></div>
</div>
</div>

