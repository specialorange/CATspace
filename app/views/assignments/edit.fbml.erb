<h1>Editing assignment</h1>

<% form_for(@assignment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :synopsis %><br />
    <%= f.text_area :synopsis %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>
<%= form_tag(@upload_url, :multipart => true)%>
<input type="file" id="uploaded_file" name="uploaded_file" />
<input id="id" name="id" value="<%=@assignment.id%>"type="hidden" />
<%= submit_tag "Upload" %>
</form>

<%= link_to 'Show', @assignment %> |
<%= link_to 'Back', assignments_path %>
